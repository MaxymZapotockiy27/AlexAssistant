<Page x:Class="AlexAssistant.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlexAssistant"
      mc:Ignorable="d"
      d:DesignHeight="440"
      d:DesignWidth="400"
      Title="Dashboard - Alex Assistant"
      Background="#FF2C2C2C"
      Foreground="White">

    <Page.Resources>
        <!-- Toggle Button Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Background" 
                                    Background="#444444" 
                                    CornerRadius="15" 
                                    BorderBrush="#666666" 
                                    BorderThickness="1"/>
                            <Border x:Name="Indicator" 
                                    Width="26" 
                                    Height="26" 
                                    CornerRadius="13" 
                                    Background="#CCCCCC" 
                                    HorizontalAlignment="Left" 
                                    Margin="2,0,0,0"/>
                            <ContentPresenter x:Name="Content" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="0,0,0,0" 
                                              Content="{TemplateBinding Content}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Indicator" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Indicator" Property="Margin" Value="0,0,2,0"/>
                                <Setter TargetName="Indicator" Property="Background" Value="#00A5FF"/>
                                <Setter TargetName="Background" Property="Background" Value="#333333"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Background" Property="BorderBrush" Value="#00A5FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ScrollBar">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Width" Value="8"/>
      
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track Name="PART_Track"
                               IsDirectionReversed="true"
                               Focusable="false">
                                <Track.Thumb>
                                    <Thumb Background="#393939" Height="40" Margin="0">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="#393939"
                                                    BorderThickness="0"
                                                    CornerRadius="4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Settings Button Style -->
        <Style x:Key="SettingsButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="20">
                            <Grid>
                                <Path x:Name="SettingsIcon" 
                                      Width="20" 
                                      Height="20" 
                                      Fill="#CCCCCC" 
                                      Stretch="Uniform" 
                                      Data="M9.405 0c.512 0 .972.32 1.15.8l.526 1.407c.158.074.314.153.467.237l1.474-.476c.492-.149 1.023.044 1.302.489l1.594 2.77c.28.445.175.998-.255 1.328l-1.14.895c.012.157.019.316.019.477 0 .161-.007.32-.019.477l1.14.895c.43.33.535.883.255 1.328l-1.594 2.77c-.28.445-.81.638-1.302.489l-1.474-.476a6.628 6.628 0 0 1-.467.237l-.526 1.407c-.178.48-.638.8-1.15.8H6.551c-.512 0-.972-.32-1.15-.8l-.526-1.407a6.628 6.628 0 0 1-.467-.237l-1.474.476c-.492.149-1.023-.044-1.302-.489l-1.594-2.77c-.28-.445-.175-1.028.255-1.358l1.14-.895A5.79 5.79 0 0 1 1.414 8a5.79 5.79 0 0 1 .019-.477l-1.14-.895c-.43-.33-.535-.883-.255-1.328l1.594-2.77c.28-.445.81-.638 1.302-.489l1.474.476c.153-.084.31-.163.467-.237L5.4.8c.178-.48.638-.8 1.15-.8h2.854zM8 5.333c-1.473 0-2.667 1.194-2.667 2.667 0 1.473 1.194 2.667 2.667 2.667 1.473 0 2.667-1.194 2.667-2.667C10.667 6.527 9.473 5.333 8 5.333z"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#444"/>
                                <Setter TargetName="SettingsIcon" Property="Fill" Value="#00A5FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
          

    <Grid>
        <!-- Header with Toggle button and Settings -->
        <Grid VerticalAlignment="Top" Height="60">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,15,0">
                <TextBlock Text="Assistant" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0" 
                           Foreground="#AAAAAA" 
                           FontSize="14"/>
                <ToggleButton x:Name="AssistantToggle" 
                              Style="{StaticResource ToggleButtonStyle}" 
                              IsChecked="True" 
                              Click="AssistantToggle_Click" 
                              Margin="0,0,15,0"/>
                <!--<Button x:Name="SettingsButton" 
                        Style="{StaticResource SettingsButtonStyle}" 
                        Click="SettingsButton_Click"/>-->
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Margin="0,60,0,0">
            <!-- Welcome Section -->
            <StackPanel Margin="20,20,20,0">
                <TextBlock x:Name="WelcomeMessage" 
                           Text="Welcome back, [Name]!" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,15"/>

                <!-- Status Panel -->
                <Border Background="#333333" 
                        CornerRadius="10" 
                        Padding="15" 
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Status" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>

                        <StackPanel Grid.Row="1" Orientation="Vertical">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Voice Assistant" FontSize="16"/>
                                <TextBlock Grid.Column="1" 
                                           x:Name="VoiceStatus" 
                                           Text="Active" 
                                           Foreground="#00A5FF" 
                                           FontWeight="SemiBold"/>
                            </Grid>

                            <!-- Adding margin instead of Spacing -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
      
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Quick Actions -->
                <TextBlock Text="Quick Actions" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                <Grid Margin="0,5,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Action Buttons -->
                    <Button Grid.Column="0" 
                            x:Name="AskMeButton"
                            Margin="0,0,5,10" 
                            Height="80" 
                            Click="SettingsButton_Click"
                            Background="#444444" 
                            BorderBrush="#666666" 
                            BorderThickness="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="8">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Path Width="24" 
                                              Height="24" 
                                              Fill="#CCCCCC" 
                                              Stretch="Uniform" 
                                              Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"/>
                                        <TextBlock Text="Settings" 
                                                   FontSize="16" 
                                                   Margin="0,5,0,0" 
                                                   Foreground="White"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#555555"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#00A5FF"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="1" 
                            x:Name="RemindersButton"
                            Margin="5,0,0,10" 
                            Height="80" 
                            Click="RemindersButton_Click"
                            Background="#444444" 
                            BorderBrush="#666666" 
                            BorderThickness="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="8">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Path Width="24" 
                                              Height="24" 
                                              Fill="#CCCCCC" 
                                              Stretch="Uniform" 
                                              Data="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10zm0-2a8 8 0 1 0 0-16 8 8 0 0 0 0 16zm1-8.41V7a1 1 0 0 0-2 0v5c0 .265.105.52.293.707l3 3a1 1 0 0 0 1.414-1.414L13 11.59z"/>
                                        <TextBlock Text="Reminders" 
                                                   FontSize="16" 
                                                   Margin="0,5,0,0" 
                                                   Foreground="White"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#555555"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#00A5FF"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Row="1" 
                            Grid.Column="0" 
                            x:Name="ConfidenceButton"
                            Margin="0,0,5,0" 
                            Height="80" 
                            Click="ConfidenceButtonButton_Click"
                            Background="#444444" 
                            BorderBrush="#666666" 
                            BorderThickness="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="8">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Path Width="24" 
                                              Height="24" 
                                              Fill="#CCCCCC" 
                                              Stretch="Uniform" 
                                              Data="M11.83,9L15,12.16C15,12.11 15,12.05 15,12A3,3 0 0,0 12,9C11.94,9 11.89,9 11.83,9M7.53,9.8L9.08,11.35C9.03,11.56 9,11.77 9,12A3,3 0 0,0 12,15C12.22,15 12.44,14.97 12.65,14.92L14.2,16.47C13.53,16.8 12.79,17 12,17A5,5 0 0,1 7,12C7,11.21 7.2,10.47 7.53,9.8M2,4.27L4.28,6.55L4.73,7C3.08,8.3 1.78,10 1,12C2.73,16.39 7,19.5 12,19.5C13.55,19.5 15.03,19.2 16.38,18.66L16.81,19.08L19.73,22L21,20.73L3.27,3M12,7A5,5 0 0,1 17,12C17,12.64 16.87,13.26 16.64,13.82L19.57,16.75C21.07,15.5 22.27,13.86 23,12C21.27,7.61 17,4.5 12,4.5C10.6,4.5 9.26,4.75 8,5.2L10.17,7.35C10.74,7.13 11.35,7 12,7Z"/>
                                        <TextBlock Text="Confidence" 
                                                   FontSize="16" 
                                                   Margin="0,5,0,0" 
                                                   Foreground="White"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#555555"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#00A5FF"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Row="1" 
                            Grid.Column="1" 
                            x:Name="AddComands"
                            Margin="5,0,0,0" 
                            Height="80" 
                            Click="AddComands_Click"
                            Background="#444444" 
                            BorderBrush="#666666" 
                            BorderThickness="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="8">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Path Width="24" 
                                              Height="24" 
                                              Fill="#CCCCCC" 
                                              Stretch="Uniform" 
                                              Data="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2zm0 2v3H4V6h16zm0 5v7H4v-7h16zM6 16h8v-1H6v1zm0-3h12v-1H6v1z"/>
                                        <TextBlock Text="AddCommand" 
                                                   FontSize="16" 
                                                   Margin="0,5,0,0" 
                                                   Foreground="White"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#555555"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#00A5FF"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                
            </StackPanel>
          
        </Grid>
    </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>