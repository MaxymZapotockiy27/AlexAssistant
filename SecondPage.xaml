<Page x:Class="AlexAssistant.SecondPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlexAssistant"
      mc:Ignorable="d"
      d:DesignHeight="480"
      d:DesignWidth="400"
      Title="First Launch - Alex Assistant"
      Background="#FF2C2C2C"
      Foreground="White"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#666666"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="False" 
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#00A5FF"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#00A5FF"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Background" Value="#5c5b5b"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#666666"
                                BorderThickness="2"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                             VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#7c7c7c"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00A5FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Welcome to Alex Assistant" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Margin="0,0,0,30" 
                       TextAlignment="Center"/>
            <TextBlock Text="Your Name" 
                      FontSize="16" 
                      Margin="0,0,0,10" 
                      TextAlignment="Center"/>

            <TextBox x:Name="NameInput"
                     Style="{StaticResource ModernTextBox}"
                     Width="250"
                     Margin="0,0,0,15"
                     Tag="Your Name"
                     Text="Your Name"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus"/>

            <TextBlock Text="Your City" 
                      FontSize="16" 
                      Margin="0,0,0,10" 
                      TextAlignment="Center"/>

            
            <Grid Width="250" Margin="0,0,0,15">
                
                <TextBox x:Name="NameCity"
                        Style="{StaticResource ModernTextBox}"
                        Width="250"
                        Tag="City"
                        Text="City"
                        GotFocus="TextBox_GotFocus"
                        LostFocus="TextBox_LostFocus"
                        TextChanged="NameCity_TextChanged"/>

                
                <Popup x:Name="CitySuggestionsPopup" 
                       StaysOpen="False" 
                       Placement="Bottom" 
                       PlacementTarget="{Binding ElementName=NameCity}"
                       Width="{Binding ElementName=NameCity, Path=ActualWidth}">
                    <ListBox x:Name="CitySuggestions"
                             MaxHeight="150"
                             Width="{Binding ElementName=NameCity, Path=ActualWidth}"
                             SelectionChanged="CitySuggestions_SelectionChanged"
                             Background="#444444"
                             Foreground="White"
                             BorderBrush="#666666"
                             BorderThickness="1"/>
                </Popup>
            </Grid>

            <TextBlock Text="Your Birthday" 
                       FontSize="16" 
                       Margin="0,0,0,10" 
                       TextAlignment="Center"/>

            <Grid Width="250" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Day TextBox -->
                <TextBox x:Name="DayInput"
                         Grid.Column="0"
                         Style="{StaticResource ModernTextBox}"
                         Width="Auto"
                         Margin="0"
                         Tag="DD"
                         Text="DD"
                         MaxLength="2"
                         GotFocus="TextBox_GotFocus"
                         LostFocus="TextBox_LostFocus"
                         PreviewTextInput="NumberValidationTextBox"/>

                <TextBlock Grid.Column="1" 
                           Text="/" 
                           FontSize="20" 
                           VerticalAlignment="Center" 
                           Margin="5,0" 
                           Foreground="White"/>

                <!-- Month TextBox -->
                <TextBox x:Name="MonthInput"
                         Grid.Column="2"
                         Style="{StaticResource ModernTextBox}"
                         Width="Auto"
                         Margin="0"
                         Tag="MM"
                         Text="MM"
                         MaxLength="2"
                         GotFocus="TextBox_GotFocus"
                         LostFocus="TextBox_LostFocus"
                         PreviewTextInput="NumberValidationTextBox"/>

                <TextBlock Grid.Column="3" 
                           Text="/" 
                           FontSize="20" 
                           VerticalAlignment="Center" 
                           Margin="5,0" 
                           Foreground="White"/>
                
              


                <!-- Year TextBox -->
                <TextBox x:Name="YearInput"
                         Grid.Column="4"
                         Style="{StaticResource ModernTextBox}"
                         Width="Auto"
                         Margin="0"
                         Tag="YYYY"
                         Text="YYYY"
                         MaxLength="4"
                         GotFocus="TextBox_GotFocus"
                         LostFocus="TextBox_LostFocus"
                         PreviewTextInput="NumberValidationTextBox"/>
            </Grid>

            <Button Content="Continue" 
                    Style="{StaticResource ModernButton}"
                    Click="NavigateNext_Click"/>
        </StackPanel>
    </Grid>
</Page>